<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/results_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:padding="4dp"
        android:layout_margin="2dp"
        app:layout_constraintStart_toEndOf="@id/results_imageview"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/results_relative_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_user"/>

        <TextView
            android:layout_below="@+id/results_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_repo_name"/>

        <TextView
            android:layout_below="@+id/results_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_watchers"
            />

        <TextView
            android:layout_below="@+id/results_watchers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resutls_forks"/>

        <TextView
            android:layout_below="@+id/resutls_forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_issue"/>


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>